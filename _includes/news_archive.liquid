<div class="news">
  {% if site.news != blank %}
    {% assign news_by_year = site.news | reverse | group_by_exp: 'item', 'item.date | date: "%Y"' %}
    {% for year_group in news_by_year %}
      <h2 class="bibliography">{{ year_group.name }}</h2>
      <div class="table-responsive">
        <table class="table table-sm table-borderless">
          {% for item in year_group.items %}
            <tr>
              <th scope="row" style="width: 25.25%">
                <span class="news-date-full">{{ item.date | date: '%e %B' | downcase }}</span>
                <span class="news-date-short">{{ item.date | date: '%e %b' | downcase }}</span>
              </th>
              {% if item.inline %}
                <td style="text-align: justify">
                  {{ item.content | remove: '<p>' | remove: '</p>' | emojify }}
                </td>
              {% else %}
                <td>
                  <a class="news-title" href="{{ item.url | relative_url }}">{{ item.title }}</a>
                </td>
              {% endif %}
            </tr>
          {% endfor %}
        </table>
      </div>
    {% endfor %}
  {% else %}
    <p>No news so far...</p>
  {% endif %}
</div>
